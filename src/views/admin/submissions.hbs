<script>
  const table = document.getElementById("submissionTable").getElementsByTagName("tbody")[0];
  let deleteRow = null;

  // DELETE Submission
  $(document).on("click", ".deleteBtn", function () {
    deleteRow = $(this).closest("tr")[0];
    $("#deleteSubmissionModal").modal("show");
  });

  $("#confirmDelete").on("click", function () {
    if (deleteRow) deleteRow.remove();
    deleteRow = null;
    $("#deleteSubmissionModal").modal("hide");
  });
</script>
