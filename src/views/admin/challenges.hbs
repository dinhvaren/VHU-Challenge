<!-- JS -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<!-- Logic -->
<script>
  function showToast(type, message) {
    const toast = $("#toastMsg");
    const title = $("#toastTitle");
    const body = $("#toastBody");
    toast.removeClass("border-danger border-success border-warning");
    $(".toast-header").removeClass("bg-danger bg-success bg-warning text-dark text-white");
    if (type === "success") { $(".toast-header").addClass("bg-success text-white"); toast.addClass("border-success"); title.text("‚úÖ Success"); }
    else if (type === "error") { $(".toast-header").addClass("bg-danger text-white"); toast.addClass("border-danger"); title.text("‚ùå Error"); }
    else { $(".toast-header").addClass("bg-warning text-dark"); toast.addClass("border-warning"); title.text("‚ö†Ô∏è Warning"); }
    body.text(message); toast.toast({ delay: 3000 }); toast.toast("show");
  }

  const table = document.getElementById("challengeTable").getElementsByTagName("tbody")[0];
  let deleteRow = null, deleteId = null;

  // üü¢ Add Challenge
  $("#saveAdd").on("click", async function () {
    const payload = {
      title: $("#addTitle").val().trim(),
      category: $("#addCategory").val(),
      points: parseInt($("#addPoints").val()) || 0,
      difficulty: $("#addDifficulty").val(),
      status: $("#addStatus").val(),
      description: $("#addDescription").val(),
      flag: $("#addFlag").val().trim(),
    };
    if (!payload.title || !payload.flag) return showToast("warning", "Please fill in all required fields.");
    try {
      const res = await fetch("/challenge", {
        method: "POST", headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload)
      });
      const data = await res.json();
      if (!res.ok) throw new Error(data.message);
      showToast("success", data.message || "Challenge added!");
      setTimeout(() => window.location.reload(), 2000);
    } catch (err) { showToast("error", err.message); }
    finally { $("#addChallengeModal").modal("hide"); $("#addChallengeForm")[0].reset(); }
  });

  // üü° Edit Challenge
  $(document).on("click", ".editBtn", function () {
    const row = $(this).closest("tr")[0];
    $("#editId").val(row.getAttribute("data-id"));
    $("#editTitle").val(row.cells[1].innerText);
    $("#editCategory").val(row.cells[2].innerText);
    $("#editPoints").val(row.cells[3].innerText);
    $("#editDifficulty").val(row.cells[4].innerText);
    $("#editStatus").val(row.cells[5].innerText.trim());
    $("#editChallengeModal").modal("show");
  });

  $("#saveEdit").on("click", async function () {
    const id = $("#editId").val();
    const payload = {
      title: $("#editTitle").val().trim(),
      category: $("#editCategory").val(),
      points: parseInt($("#editPoints").val()) || 0,
      difficulty: $("#editDifficulty").val(),
      status: $("#editStatus").val(),
      description: $("#editDescription").val(),
    };
    if (!payload.title) return showToast("warning", "Please fill in all required fields.");
    try {
      const res = await fetch(`/challenge/${id}`, {
        method: "PUT", headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload)
      });
      const data = await res.json();
      if (!res.ok) throw new Error(data.message);
      showToast("success", data.message || "Challenge updated!");
      setTimeout(() => window.location.reload(), 2000);
    } catch (err) { showToast("error", err.message); }
    finally { $("#editChallengeModal").modal("hide"); }
  });

  // üî¥ Delete Challenge
  $(document).on("click", ".deleteBtn", function () {
    deleteRow = $(this).closest("tr")[0];
    deleteId = deleteRow.getAttribute("data-id");
    $("#deleteChallengeModal").modal("show");
  });

  $("#confirmDelete").on("click", async function () {
    if (!deleteId) return;
    try {
      const res = await fetch(`/challenge/${deleteId}`, { method: "DELETE" });
      const data = await res.json();
      if (!res.ok) throw new Error(data.message);
      deleteRow.remove();
      showToast("success", data.message || "Challenge deleted!");
    } catch (err) { showToast("error", err.message); }
    finally { deleteRow = null; deleteId = null; $("#deleteChallengeModal").modal("hide"); }
  });
</script>
